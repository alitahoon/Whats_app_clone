<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundDarkGreen">

    <TextView
        android:id="@+id/status_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_start_20"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_story_text"
        app:layout_constraintStart_toStartOf="@+id/txt_story_text"
        app:layout_constraintTop_toTopOf="@+id/txt_story_text" />

    <TextView
        android:layout_marginHorizontal="5dp"
        android:id="@+id/txt_story_text"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:text="story text"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="8sp"
        android:background="@drawable/status_rcv_txt_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/story_userProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="UserName"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txt_story_text"
        app:layout_constraintTop_toTopOf="@+id/txt_story_text" />

    <TextView
        android:id="@+id/story_publishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="6:30 PM"
        android:textColor="@color/menuTextColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txt_story_text"
        app:layout_constraintStart_toEndOf="@+id/txt_story_text"
        app:layout_constraintTop_toBottomOf="@+id/story_userProfileName" />


